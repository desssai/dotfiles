# WINDOW_LAYOUT_MANAGEMENT
yabai -m config layout bsp

# OPEN_NEW_TILES_ON_THE_RIGHT
yabai -m config window_placement second_child

# TILES_BETWEEN_WINDOWS
yabai -m config top_padding    7
yabai -m config bottom_padding 7
yabai -m config left_padding   7
yabai -m config right_padding  7
yabai -m config window_gap     7

# NEW_WINDOWS_SAME_SIZE_AS_PARENTS
yabai -m config split_ratio 0.5

# MOUSE_OPTIONS
yabai -m config mouse_modifier		ctrl
yabai -m config mouse_action1		move
yabai -m config mouse_action2		resize
yabai -m config mouse_action_drop	swap

# FLOATING_APPS
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^CleanMyMac X$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Calendar$" manage=off
yabai -m rule --add app="^About$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^System Information$" manage=off
yabai -m rule --add app="balenaEtcher^$" manage=off
yabai -m rule --add title="^dev$" manage=off sticky=on

# FLOATING_APPS_STAU_ON_TOP
# yabai -m config window_topmost on

# WINDOW_BORDERS
yabai -m config window_border off
yabai -m config window_border_blur off
yabai -m config window_border_width 2
yabai -m config active_window_border_color 0xFF000000
yabai -m config normal_window_border_color 0x00FFFFFF
